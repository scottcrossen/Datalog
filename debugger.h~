#include <vector>
#include <iostream>
#include <string>
using namespace std;

class Debugger{
 private:
  vector<int> flags;
 public:
  int on;
  Debugger(){
    this->on=false;
  };
  ~Debugger(){};
  flag(int flag){
    flags.push_back(flag);
  }
  display(){
    if(on){
      cout << "flags encountered: ";
      for(int i=0; i < flags.length(); i++)
	cout << flags[i] << " ";
      cout << endl;
    }
  }
  output(string output){
    if(on) cout << "status line: " output << endl;
  }
  clear_flags(){
    for (int i=0; i < flags.length(); i++) flags.pop();
  }
}
